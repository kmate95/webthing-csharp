  </ItemGroup>

  <ItemGroup>
    <Content Include="..\azure-pipelines.yml">
      <Link>ci\azure-pipelines.yml</Link>
    </Content>
    <Content Include="..\GitVersion.yml">
      <Link>config\GitVersion.yml</Link>
    </Content>
  </ItemGroup>

</Project>
